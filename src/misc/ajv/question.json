{
    "$id": "question.json",
    "type": "object",
    "properties": {
        "title": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "index": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "type": {
            "type": "string",
            "enum": [
                "button",
                "text",
                "select"
            ]
        },
        "depend_on": {
            "type": "object",
            "default": 0,
            "properties": {
                "index": {
                    "type": "number"
                },
                "rule": {
                    "type": "string",
                    "enum": [
                        "key",
                        "neq"
                    ]
                }
            }
        },
        "regex": {
            "type": "string"
        },
        "style": {
            "type": "string"
        },
        "choices": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "answers": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "coordinates": {
            "type": "array",
            "items": {
                "$ref": "coords.json#"
            }
        },
        "parts": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        }
    },
    "oneOf": [
        {
            "required": [
                "title",
                "parts"
            ]
        },
        {
            "required": [
                "title",
                "type",
                "regex",
                "coordinates"
            ]
        },
        {
            "required": [
                "title",
                "type",
                "answers",
                "coordinates"
            ]
        }
    ],
    "additionalProperties": false
}